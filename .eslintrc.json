{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "chai-expect",
        "mocha"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "chai-expect/missing-assertion": 2,
        "chai-expect/terminating-properties": 1,
        "mocha/no-exclusive-tests": "error"
    },
    "globals": {
        "describe": true,
        "context": true,
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true,
        "it": true,
        "expect": true,
        "browser": true,
        "$": true,
        "$$": true,
        "logger": true
    }
}